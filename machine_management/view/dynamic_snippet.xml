<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="new_machine_template" name="Machines">
    <section class="machine_snippet">
       <div class="ref-arrival-content">
            <p class="ref-section_head ref-centerhead__underline ref-head--primary"
               style="color: #0d5272;">Machines
            </p>
        </div>
        <div id="new_machines_carousel"/>
    </section>
    </template>

    <template id="basic_snippets" inherit_id="website.snippets" name="Machines Snippet " priority="8">
       <xpath expr="//div[@id='snippet_effect']//t[@t-snippet][last()]" position="after">
           <t t-snippet="machine_management.new_machine_template"/>
       </xpath>
    </template>
</odoo>